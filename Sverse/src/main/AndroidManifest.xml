<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exemple.oseias.sverse">

    <application
        android:allowBackup="true"
        android:icon="@drawable/novalogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/novalogo"
        android:supportsRtl="true"
        android:theme="@style/SverseTheme.NoActionBar">
        <activity android:name="com.example.oseias.sverse.MainActivity"></activity>
        <activity android:name="com.example.oseias.sverse.OthersActivitys.CicloItemCreator" />
        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.TestandoClasses"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.TutorialActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SverseTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.oseias.sverse.OthersClass.ContBackgroundService"
            android:exported="false"
            android:label="ServicoTest">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.example.oseias.sverse.OthersClass.ContBackgroundService" />
            </intent-filter>
        </service>

        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/SverseTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.NotaCreator"
            android:label="@string/title_activity_criador_de_notas"
            android:screenOrientation="portrait"
            android:theme="@style/SverseTheme.NoActionBar" />
        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.CadastroActivity"
            android:label="@string/title_activity_cadastrar"
            android:screenOrientation="portrait"
            android:theme="@style/SverseTheme.NoActionBar" />
        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.CicloActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.GroupCreator"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.WorkGroupArea"
            android:label="@string/title_activity_area_de_trabalho"
            android:screenOrientation="portrait"
            android:theme="@style/SverseTheme.NoActionBar" />
        <activity
            android:name="com.example.oseias.sverse.OthersActivitys.GroupArea"
            android:label="@string/title_activity_area_de_trabalho_em_grupo"
            android:screenOrientation="portrait"
            android:theme="@style/SverseTheme.NoActionBar" />
    </application>

</manifest>