<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/imageView47"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView54"
            app:srcCompat="@drawable/setapadrao" />

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView63"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cv1" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/llChecks"
            app:layout_constraintEnd_toStartOf="@+id/imageView47"
            app:layout_constraintStart_toEndOf="@+id/imgItem"
            app:layout_constraintTop_toTopOf="@+id/imgItem">

            <TextView
                android:id="@+id/tvNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Materia de Estudo"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="128dp" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Breve descrição sobre a conteudo."
                tools:layout_editor_absoluteY="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChecks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/imgItem"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintStart_toEndOf="@+id/imgItem">

            <ImageView
                android:id="@+id/imageView52"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_configuracao" />

            <ImageView
                android:id="@+id/imageView49"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_tag"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="166dp" />

            <ImageView
                android:id="@+id/imageView51"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_info" />

            <ImageView
                android:id="@+id/imageView50"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_lexcluir_c" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView54"
            android:layout_width="28dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imgItem"
            app:layout_constraintEnd_toEndOf="@+id/imgItem"
            app:layout_constraintStart_toStartOf="@+id/imgItem"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <ImageView
            android:id="@+id/imageView63"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginStart="70dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_media_ff" />

        <ImageView
            android:id="@+id/imageView64"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView65"
            app:layout_constraintStart_toEndOf="@+id/imageView63"
            app:srcCompat="@android:drawable/ic_media_ff" />

        <ImageView
            android:id="@+id/imageView65"
            android:layout_width="39dp"
            android:layout_height="35dp"
            android:layout_marginEnd="48dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>