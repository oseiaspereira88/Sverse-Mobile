<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg26" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:shadowColor="#808080"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="Mural Acadêmico"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView34">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="180dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="24dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:paddingTop="0dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView4">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView23"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:onClick="actionButton"
                                app:layout_constraintBottom_toTopOf="@+id/imageView24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@mipmap/ic_calendario" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:onClick="actionButton"
                                android:text="Tarefa atual"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView23"
                                app:layout_constraintStart_toEndOf="@+id/imageView23"
                                app:layout_constraintTop_toTopOf="@+id/imageView23" />

                            <ImageView
                                android:id="@+id/imageView24"
                                android:layout_width="wrap_content"
                                android:layout_height="320dp"
                                android:layout_marginTop="42dp"
                                android:scaleType="centerCrop"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/bg8" />

                            <TextView
                                android:id="@+id/tvTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="16dp"
                                android:shadowColor="#808080"
                                android:shadowDx="3"
                                android:shadowDy="3"
                                android:shadowRadius="1"
                                android:text="00:00"
                                android:textAlignment="center"
                                android:textColor="@android:color/background_light"
                                android:textSize="52sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tvInfoTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="32dp"
                                android:layout_marginBottom="8dp"
                                android:onClick="actionButton"
                                android:shadowColor="#808080"
                                android:shadowDx="3"
                                android:shadowDy="3"
                                android:shadowRadius="1"
                                android:text="Organize seu Ciclo de Estudo"
                                android:textAlignment="center"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/tvTime"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/progressBar" />

                            <ImageView
                                android:id="@+id/imageView38"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:onClick="abrirCicloDeEstudo"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/imageView24"
                                app:srcCompat="@mipmap/ic_configuracao" />

                            <ImageView
                                android:id="@+id/imageView39"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:onClick="actionButton"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView38"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/imageView24"
                                app:srcCompat="@android:drawable/checkbox_on_background" />

                            <LinearLayout
                                android:id="@+id/linearLayout6"
                                android:layout_width="0dp"
                                android:layout_height="54dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/tvTime"
                                app:layout_constraintStart_toStartOf="@+id/tvTime">

                                <ImageView
                                    android:id="@+id/bAlternar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:srcCompat="@mipmap/ic_adiar"
                                    tools:layout_editor_absoluteX="72dp"
                                    tools:layout_editor_absoluteY="262dp" />

                                <ImageView
                                    android:id="@+id/bVincular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:srcCompat="@mipmap/ic_tag" />

                                <ImageView
                                    android:id="@+id/bPlay"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@mipmap/ic_play_pomodoro"
                                    tools:layout_editor_absoluteX="8dp"
                                    tools:layout_editor_absoluteY="266dp" />

                                <ImageView
                                    android:id="@+id/bRestart"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@mipmap/ic_refazer"
                                    tools:layout_editor_absoluteX="272dp"
                                    tools:layout_editor_absoluteY="255dp" />

                                <ImageView
                                    android:id="@+id/bMarcar"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@mipmap/ic_acept"
                                    tools:layout_editor_absoluteX="312dp"
                                    tools:layout_editor_absoluteY="247dp" />

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:onClick="actionButton"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/imageView24" />

                            <ImageView
                                android:id="@+id/imageView45"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:onClick="actionButton"
                                app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/progressBar"
                                app:srcCompat="@drawable/logo88" />

                        </android.support.constraint.ConstraintLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal"
                        android:paddingTop="0dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView19">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="wrap_content"
                                android:layout_height="130dp"
                                android:layout_marginTop="8dp"
                                android:scaleType="centerCrop"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView17"
                                app:srcCompat="@drawable/bg5" />

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="8dp"
                                android:onClick="actionButton"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@mipmap/ic_info" />

                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="164dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:onClick="actionButton"
                                android:shadowColor="#808080"
                                android:shadowDx="3"
                                android:shadowDy="3"
                                android:shadowRadius="1"
                                android:text="Use o ciclo de estudo para uma melhor experiência."
                                android:textAlignment="center"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/imageView18"
                                app:layout_constraintStart_toStartOf="@+id/imageView18"
                                app:layout_constraintTop_toTopOf="@+id/imageView18" />

                            <TextView
                                android:id="@+id/textView30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:onClick="actionButton"
                                android:text="Dica do Momento"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView17"
                                app:layout_constraintStart_toEndOf="@+id/imageView17"
                                app:layout_constraintTop_toTopOf="@+id/imageView17" />

                        </android.support.constraint.ConstraintLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView34"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"
        app:srcCompat="@drawable/border_toolbar" />

</android.support.constraint.ConstraintLayout>