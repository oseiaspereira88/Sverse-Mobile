<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/green">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imgSegmento1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintEnd_toEndOf="@+id/imgItem"
            app:layout_constraintStart_toStartOf="@+id/imgItem"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/border6" />

        <ImageView
            android:id="@+id/imgBGDia"
            android:layout_width="74dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDia"
            app:layout_constraintEnd_toEndOf="@+id/tvDia"
            app:layout_constraintStart_toStartOf="@+id/tvDia"
            app:layout_constraintTop_toTopOf="@+id/tvDia"
            app:srcCompat="@drawable/border5" />

        <TextView
            android:id="@+id/tvDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:text="Segunda"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imgSegmento2"
            app:layout_constraintEnd_toStartOf="@+id/imgItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgItem" />

        <ImageView
            android:id="@+id/imgBGHora"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvHora"
            app:layout_constraintEnd_toEndOf="@+id/imgBGDia"
            app:layout_constraintStart_toStartOf="@+id/imgBGDia"
            app:layout_constraintTop_toTopOf="@+id/tvHora"
            app:srcCompat="@drawable/border6" />

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:text="16:45"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imgSegmento2"
            app:layout_constraintEnd_toStartOf="@+id/imgItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgSegmento1" />

        <ImageView
            android:id="@+id/imgBGItem"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgSegmento1"
            app:srcCompat="@mipmap/ic_item_green" />

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="84dp"
            android:layout_height="84dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBGItem"
            app:layout_constraintEnd_toEndOf="@+id/imgBGItem"
            app:layout_constraintStart_toStartOf="@+id/imgBGItem"
            app:layout_constraintTop_toTopOf="@+id/imgBGItem"
            app:srcCompat="@mipmap/ic_play_pomodoro" />

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:text="Materia de Estudo"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgItem"
            app:layout_constraintTop_toTopOf="@+id/imgItem" />

        <ImageView
            android:id="@+id/imgSegmento2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgItem"
            app:layout_constraintStart_toStartOf="@+id/imgItem"
            app:srcCompat="@drawable/border5" />

        <ImageView
            android:id="@+id/imgYes"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="32dp"
            android:clickable="false"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imgItem"
            app:srcCompat="@drawable/ic_yes" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>